{
  server_name {$SERVER_NAME:WACC}
}

{$SERVER_ADDRESS=:80} {
  root * /srv/web
  encode zstd gzip
  file_server

  handle_path /wasm/*.wasm {
	root * /srv/web/wasm
	header Cache-Control "public, max-age=31536000, immutable"
  }

  handle_path /wasm {
	rewrite * /loadWASM.js
	header Cache-Control "public, max-age=86400"
  }

  handle {
	rewrite * /app.html
  }
}
